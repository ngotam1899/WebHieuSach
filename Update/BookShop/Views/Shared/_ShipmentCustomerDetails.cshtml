@model BookShop.Models.Shipments

<h4 class="text-success">Shipment Details</h4>

<div style="height:100px; background-color:aliceblue" class="container border">
    <div class="col-12">
        <div class="row" style="padding-top:10px;">
            <div class="col-sm-2">
                Full Name
            </div>
            <div class="col-sm-3">
                <input asp-for="@Model.CustomerName" readonly class="form-control" />
            </div>
            <div class="col-2">

            </div>
            <div class="col-sm-2">
                Email
            </div>
            <div class="col-sm-3">
                <input asp-for="@Model.CustomerEmail" readonly class="form-control" />
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="row" style="padding-top:10px;">
            <div class="col-sm-2">
                Phone Number
            </div>
            <div class="col-sm-3">
                <input asp-for="@Model.CustomerPhone" readonly class="form-control" />
            </div>
            <div class="col-2">

            </div>
            <div class="col-sm-2">
                Shipment Date
            </div>
            <div class="col-sm-3">
                <input asp-for="@Model.ShipmentDate" readonly class="form-control" />
            </div>
        </div>
    </div>
</div>