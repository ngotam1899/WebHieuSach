@model BookShop.Models.ViewModel.ShipmentViewModel
<form method="get">
    <br /><br />
    <h2 class="text-info">Shipment List</h2>
    <br />

    <div style="height:150px; background-color:aliceblue" class="container">
        @* We will add search criteria *@
        <div class="col-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                    Customer Name
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>
                <div class="col-sm-2">
                    Email
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                    Phone Number
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>
                <div class="col-sm-2">
                    Shipment Date
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchDate", new { htmlAttributes = new { @class = "form-control", @id = "datepicker" } })
                </div>
            </div>

            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-3">
                </div>
                <div class="col-2">

                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-3">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

    <br /><br />

    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.Shipments.FirstOrDefault().SalesPerson.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Shipments.FirstOrDefault().ShipmentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Shipments.FirstOrDefault().CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Shipments.FirstOrDefault().CustomerPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Shipments.FirstOrDefault().CustomerEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Shipments.FirstOrDefault().isConfirmed)
                </th>
                <th>

                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Shipments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.SalesPerson.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ShipmentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.isConfirmed)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.ID" />
                    </td>
                </tr>
            }
        </table>
    </div>
</form>

@section Scripts{
    <script>       
        $(function () {
            $("#datepicker").datepicker({
                minDate: +1, maxDate: "+3M"
            });
        });
    </script>
}